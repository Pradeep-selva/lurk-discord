{
  "manifest_version": 2,
  "name": "Lurk Discord",
  "version": "1.0",
  "background": {
    "page": "./pages/background.html"
  },
  "content_scripts": [
    {
      "js": ["./scripts/content.js"],
      "matches": ["https://discord.com/channels/*"]
    }
  ],
  "browser_action": {
    "default_popup": "./pages/popup.html"
  },
  "permissions": ["tabs", "https://discord.com/*"],
  "web_accessible_resources": ["utils/*", "scripts/*"]
}
